#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

# fail fast
set -e

# config
APACHE_VERSION="2.2.22"
APACHE_PATH="apache"
PHP_VERSION="5.4.4"
PHP_PATH="php"

BIN_DIR=$(dirname $0)
BUILD_DIR=$1
CACHE_DIR=$2
LP_DIR=`cd $(dirname $0); cd ..; pwd`

# include .files when moving things around
shopt -s dotglob

cd $BUILD_DIR

# move app things to www
mkdir -p $CACHE_DIR/www
mv * $CACHE_DIR/www
mv $CACHE_DIR/www .

# keep Procfile
if [ -f www/Procfile ]; then
  mv www/Procfile .
fi

APACHE_URL="http://dl.dropbox.com/u/62064441/apache.tar.gz"
echo "-----> Bundling Apache version $APACHE_VERSION"
curl --silent --max-time 60 --location "$APACHE_URL" | tar xz

PHP_URL="http://dl.dropbox.com/u/62064441/php.tar.gz"
echo "-----> Bundling PHP version $PHP_VERSION"
curl --silent --max-time 60 --location "$PHP_URL" | tar xz

# update config files
cp $LP_DIR/conf/httpd.conf $APACHE_PATH/conf
cp $LP_DIR/conf/php.ini php
cp $LP_DIR/conf/php.ini /php

# make php available on bin
mkdir -p bin
ln -s /php/bin/php bin/php

if [ -f www/composer.json ] && [ ! -d www/vendor ]; then
    GIT_DIR_ORIG=$GIT_DIR
    unset GIT_DIR
    echo "-----> Bundling Composer"
    COMPOSER_URL="http://getcomposer.org/composer.phar"
    curl --silent --max-time 60 --location "$COMPOSER_URL" > www/composer.phar
    cd www
    echo "-----> Installing dependencies"
    LD_LIBRARY_PATH=$BUILD_DIR/php/ext $BUILD_DIR/php/bin/php -d date.timezone=UTC composer.phar install --prefer-source
    cd $BUILD_DIR
    rm www/composer.phar
    export GIT_DIR=$GIT_DIR_ORIG
fi



cat >>boot.sh <<EOF
for var in \`env|cut -f1 -d=\`; do
  echo "PassEnv \$var" >> /apache/conf/httpd.conf;
done
touch /www/logs/error_log
touch /www/logs/access_log
tail -F /www/logs/error_log &
tail -F /www/logs/access_log &
export LD_LIBRARY_PATH=/php/ext
export PHP_INI_SCAN_DIR=/www
echo "Launching Apache"
exec /apache/bin/httpd -DNO_DETACH
EOF

chmod +x boot.sh

# clean the cache
rm -rf $CACHE_DIR/*
